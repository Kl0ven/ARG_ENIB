{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "require-jsdoc": 0,
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "max-len": [
            "error",
            {
                "code": 110
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ]
    }
}